
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#4A403D"
android:padding="16dp">

<!-- Ongoing & Disputes Section -->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:text="Ongoing:"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginEnd="4dp"/>

    <TextView
        android:text="4"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:text="Disputes:"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginEnd="4dp"/>

    <TextView
        android:text="1"
        android:textColor="#FF3B30"
        android:textSize="16sp"
        android:textStyle="bold"/>
</LinearLayout>

<!-- "Lost" Section Title -->
<TextView
    android:id="@+id/lostLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Lost"
    android:textColor="#FFFFFF"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@+id/ongoingDisputesSection"
    app:layout_constraintStart_toStartOf="parent"/>

<!-- Lost Items List -->
<LinearLayout
    android:id="@+id/lostItemsContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@id/lostLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- Lost Item 1 (With Dispute Icon) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Water Bottle mk3000"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:text="School Library"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"/>

                <TextView
                    android:text="08/20/2065"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_dialog_alert"
                android:tint="#FF3B30"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

